# AWS deployment environment variables
# Copy this file to .env.deploy and fill in your specific values

# Your AWS account credentials
AWS_ACCOUNT_ID=YOUR_AWS_ACCOUNT_ID
AWS_REGION=YOUR_AWS_REGION

# ECS configuration
CLUSTER_NAME=YOUR_CLUSTER_NAME
SERVICE_NAME=YOUR_SERVICE_NAME
REPOSITORY_NAME=YOUR_REPOSITORY_NAME

# IAM roles
EXECUTION_ROLE_NAME=YOUR_EXECUTION_ROLE

# Log configuration
LOG_GROUP_NAME=YOUR_LOG_GROUP_NAME

# Frontend configuration - AWS Amplify
NEXT_PUBLIC_API_URL=YOUR_API_URL
AMPLIFY_APP_ID=YOUR_AMPLIFY_APP_ID
AMPLIFY_BRANCH=YOUR_AMPLIFY_BRANCH

# CORS configuration for backend
ALLOWED_ORIGINS=YOUR_FRONTEND_URL,YOUR_DEV_URL,http://localhost:3000

# Custom domain configuration (no default value for security)
# Format: yourdomain.com (without https://)
CUSTOM_DOMAIN=YOUR_DOMAIN 